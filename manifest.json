{
    "manifest_version": 2,
  
    "name": "RateMyProfs Mcgill",
    "description": "Looks up professor ratings on ratemyprofessors.com and shows them in the mcgill course webpages!",
    "version": "1.0",
  
    "icons": {
      "128": "icon.png"
    },
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
  
    "content_scripts": [
        {
          "matches": ["*://www.mcgill.ca/study/*/courses/*"],
          "js": ["mainscript.js"]
        }
      ],
  
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "http://www.ratemyprofessors.com/",
      "https://www.ratemyprofessors.com/"
    ]
  }